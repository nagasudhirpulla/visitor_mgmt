@page
@model WebApp.Pages.Visitors.CreateModel
@{
}

<div class="row justify-content-center align-items-center">
    <div class="col col-md-4 col-lg-4 col-xl-3">
        <h2>@ViewData["Title"]</h2>
        <form method="post">
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <input asp-for="NewVisitor.ImageUri" type="hidden" />
            <div class="form-group">
                <div id="cameraFeed"></div>
                <button type="button" class="btn btn-sm btn-success" onclick="takeSnapshot()">Capture</button>
                <div id="capturedImage">Your captured image will appear here...</div>
                <span asp-validation-for="NewVisitor.ImageUri" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NewVisitor.Name"></label>
                <input asp-for="NewVisitor.Name" class="form-control" />
                <span asp-validation-for="NewVisitor.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NewVisitor.Organization"></label>
                <input asp-for="NewVisitor.Organization" class="form-control" />
                <span asp-validation-for="NewVisitor.Organization" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-success">Create Visitor</button>
        </form>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
    <script src="~/js/node_modules/webcamjs/webcam.min.js"></script>
    <script>
        Webcam.set({
            width: 320,
            height: 240,
            image_format: 'jpeg',
            jpeg_quality: 90
        });
        Webcam.attach('#cameraFeed');
        function takeSnapshot() {
            // take snapshot and get image data
            Webcam.snap(function (data_uri) {
                // display captured image
                document.getElementById('capturedImage').innerHTML = '<img src="' + data_uri + '"/>';
                document.getElementById("NewVisitor_ImageUri").value = data_uri;
            });
        }
    </script>
}
