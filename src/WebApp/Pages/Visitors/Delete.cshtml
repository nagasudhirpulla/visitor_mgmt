@page
@model WebApp.Pages.Visitors.DeleteModel
@{
    ViewData["Title"] = "Delete Visitor Entry";
}

@if (Model.Vstr != null)
{
    <div class="row justify-content-center align-items-center">
        <div class="col col-md-10 col-lg-8 col-xl-6">
            <h2>@ViewData["Title"]</h2>
            <hr />
            <h3>Are you sure you want to delete visitor entry with Id @Model.Vstr.Id ( @Model.Vstr.VisitorName, @Model.Vstr.CompanyName ) ?</h3>
            <div>
                <form asp-action="Delete">
                    <input type="hidden" asp-for="Vstr.Id" />
                    <input type="submit" value="Delete" class="btn btn-danger" /> |
                    <a asp-page="/Visitors/Index">Back to List</a>
                </form>
            </div>
        </div>
    </div>
}